@model User

@section Styles {
    <link rel="stylesheet" href="~/css/abonaments_clients.css" />
}

<div class="page-header col-lg-12">
    <h2>
        @ViewBag.Title
    </h2>
</div>

<form asp-action="@ViewBag.Action" id="AddClient">

    <div class="col-lg-12 row">
        <div class="col-lg-12 row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.UserId" />
            <div class="form-group col-lg-6">
                <label asp-for="@Model.FirstName" class="control-label"></label>
                <input type="text" asp-for="@Model.FirstName" class="form-control" />
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="@Model.LastName" class="control-label"></label>
                <input type="text" asp-for="@Model.LastName" class="form-control" />
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="@Model.Email" class="control-label"></label>
                <input type="text" asp-for="@Model.Email" class="form-control" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="@Model.Phone" class="control-label"></label>
                <input type="tel" asp-for="@Model.Phone" class="form-control" />
                <span asp-validation-for="@Model.Phone" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group col-lg-12" style="text-align:center; margin-top: 30px">
            <input type="submit" value="Ügyfél regisztrálása" class="addButton" />
        </div>
        <div class="col-12">
            <a asp-action="Index">Vissza az ügyfelekhez</a>
        </div>


    </div>


</form>

@section Scripts {
    <script src="~/js/abonaments.js"></script>
}
