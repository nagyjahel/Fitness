                            <option selected="selected" value="">Kérem válasszon</option>
                        </select>
                        }
                        else if (Model.NewAbonament.Type == Enums.AbonamentType.Combined)
                        {
                    <select id="selectedType" asp-for="@Model.NewAbonament.Name" asp-items="@Model.CombinedAbonaments" class="form-control">
