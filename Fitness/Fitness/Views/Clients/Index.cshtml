@model List<User>
@{
    ViewData["Title"] = "Ügyfelek";
}

@section Styles {
    <link rel="stylesheet" href="~/css/abonaments_clients.css" />
}
<div class="page-header">
    <h2>Ügyfelek <a asp-action="Add" asp-controller="Clients" class="btn btn-default newClientButton"> <span class="glyphicon glyphicon-plus"> </span> Új ügyfél regisztrálása</a></h2>
</div>
<div class="col-lg-12 row">
    @if (Model.Count == 0)
    {
        <div>
            <h4>
                Még nincsenek regisztrált ügyfelek.
            </h4>
        </div>
    }
    else
    {   
        @foreach (var item in Model)
        {
            
            <div class="col-lg-4 row">
                <div class="card row" style="width:100%;">
                    
                    <img class="card-img-top" src="~/images/@item.Image" alt="Card image" style="width:300px; height:393px">
                   
                    <div class="card_body">
                        <h4 class="card_title">@item.FirstName @item.LastName</h4>
                        <p class="card_text">@item.Email</p>
                        <p><a asp-action="Profile" asp-controller="Clients" asp-route-id="@item.UserId" ><button class="cardButton">Profil megtekintése</button></a></p>
                    </div>
                </div>
            </div>

        }

    }
</div>
